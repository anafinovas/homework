public class FavoriteBooks 
{
  private String name; 
  private String author; 
  private int year; 

  public FavoriteBooks (String n, String a, int y)
  {  
    name = n;
    author = a;
    year = y;
  }

  public static void main(String[] args)
  {
    FavoriteBooks a = new FavoriteBooks("Effective Java", "Joshua Bloch", 2018);
    FavoriteBooks b = new FavoriteBooks("Head First Java", "Kathy Sierra", 2005);
    int favoriteBooks = 0; 
    int counter = 0; 
  }

  public FavoriteBooks ()
  { 
    favoriteBooks ++; 
    counter = favoriteBooks; 
  }
}
